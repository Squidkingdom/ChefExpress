generator client {
  provider        = "prisma-client-js"
  previewFeatures = ["views"]
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Ingredient {
  name          String @db.VarChar
  ingredient_id String @id(map: "ingredient_pk") @db.VarChar
}

model Items {
  name     String? @db.VarChar
  price    String? @db.VarChar
  URL      String? @db.VarChar
  quantity String? @db.VarChar
  category String? @db.VarChar
  id       String  @id(map: "items_pk") @db.VarChar
}

/// This model or at least one of its fields has comments in the database, and requires an additional setup for migrations: Read more: https://pris.ly/d/database-comments
model Recipe {
  name         String? @db.VarChar
  instructions String? @db.VarChar
  recipe_id    String  @id(map: "recipe_pk") @db.VarChar
  owner_id     String? @db.Uuid
}

model Videos {
  length   String? @db.VarChar
  title    String? @db.VarChar
  URL      String? @db.VarChar
  id       String  @id(map: "learning_page_pk") @db.VarChar
  category String? @db.VarChar
}

model ingrediantinrecipe {
  quantity      String? @db.VarChar
  recipe_id     String  @db.VarChar
  ingredient_id String  @db.VarChar

  @@id([recipe_id, ingredient_id], map: "ingrediantinrecipe_pk")
}

model saved_recipes {
  recipe_id String @db.VarChar
  user_id   String @db.VarChar

  @@id([recipe_id, user_id], map: "saved_recipes_pk")
}

view recipeview {
  id          String @db.VarChar @unique
  title       String? @db.VarChar
  owner_id    String? @db.Uuid
  description String? @db.VarChar
  ingredients Json?   @db.Json
  image       String?

}