generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Items {
  name     String? @db.VarChar
  price    String? @db.VarChar
  URL      String? @db.VarChar
  quantity String? @db.VarChar
  category String? @db.VarChar
  id       String  @id(map: "ordering_page_pk") @db.VarChar
}

model Videos {
  length   String? @db.VarChar
  title    String? @db.VarChar
  URL      String? @db.VarChar
  id       String  @id(map: "learning_page_pk") @db.VarChar
  category String? @db.VarChar
}

model Ingredient {
  name          String              @id(map: "ingredient_pk") @db.VarChar
  ingredient_id String?             @db.VarChar
  Relation      ingrediantinrecipe? @relation(fields: [ingredient_id], references: [ingredient_id], onDelete: NoAction, onUpdate: NoAction, map: "ingredient_relation_fk")
}

model Recipe {
  name         String?            @db.VarChar
  instructions String?            @db.VarChar
  recipe_id    String             @id(map: "recipe_pk") @db.VarChar
  owner_id     String?            @db.Uuid
  Relation     ingrediantinrecipe @relation(fields: [recipe_id], references: [recipe_id], onDelete: NoAction, onUpdate: NoAction, map: "recipe_relation_fk")
}

model saved_recipes {
  recipe_id String             @id(map: "saved_recipes_pk") @db.VarChar
  user_id   String?            @db.VarChar
  Relation  ingrediantinrecipe @relation(fields: [recipe_id], references: [recipe_id], onDelete: NoAction, onUpdate: NoAction, map: "saved_recipes_relation_fk")
}

model ingrediantinrecipe {
  quantity      String?        @db.VarChar
  recipe_id     String         @id(map: "relation_pk_rec") @db.VarChar
  ingredient_id String         @unique(map: "relation_unique") @db.VarChar
  Ingredient    Ingredient[]
  Recipe        Recipe?
  saved_recipes saved_recipes?
}
